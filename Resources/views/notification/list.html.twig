{% extends "SynthNotificationBundle::layout.html.twig" %}
{% block notification_content %}
<h1>
	Notifications
</h1>
<div class="row">
    <table class="table table-hover">
    	<thead>
    		<tr>
    			<th>Type</th>
    			<th>Message</th>
    			<th>Created</th>
    		</tr>
    	</thead>
    	<tbody>
    	   {% for notification in notifications %}
    	   <tr>
    	       <td>{{ notification.type }}</td>
    	       <td>{{ notification.message }}</td>
    	       <td>{{ notification.createdAt|date("d-m-Y H:i:s") }}</td>
    	   </tr>
    	   {% else %}
    	   <tr>
    	       <td colspan="3">No notifications found.</td>
    	   </tr>
    	   {% endfor %}
    	</tbody>
    </table>
</div>
{% endblock %}
